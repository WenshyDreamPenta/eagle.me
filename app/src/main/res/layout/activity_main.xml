<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.star.eagleme.activitity.MainActivity">

    <LinearLayout
        android:id="@+id/ll_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="47dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@null"
            android:hint="send something..."
            android:paddingLeft="13dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="16sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_text"
        android:layout_marginLeft="25dp">
        <TextView
            android:id="@+id/tv_connect"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="#000"
            android:gravity="center"
            android:text="Connect"
            android:textColor="#fff"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_close"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="#000"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:text="Close"
            android:textColor="#fff"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_send"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="#000"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="Send"
            android:textColor="#fff"
            android:textSize="16sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_http_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_btns"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/tv_get"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="#000"
            android:gravity="center"
            android:text="Get"
            android:textColor="#fff"
            android:textSize="16sp"/>


    </LinearLayout>


    <com.star.eagleme.widgets.animview.PointAnimView
        android:id="@+id/pv_animview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_btns"
        android:layout_marginTop="50dp"
        android:visibility="gone"/>
</RelativeLayout>
